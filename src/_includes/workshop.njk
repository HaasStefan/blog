---
layout: "base.njk"
---

<div class="sm:flex sm:justify-center ze:mt-3 md:mt-6 ">
  <div class="max-w-screen-lg lg:max-w-screen-xl p-4 w-full">
    <div class="flex ze:flex-col md:flex-row items-center justify-center ze:gap-3 md:gap-10 mb-20">
     <div>
        {% if secondaryImage %}
        <img
          src="{{ secondaryImage }}"
          alt="{{ secondaryImageAlt }}"
          class="ze:max-h-[5rem] md:max-h-[10rem] ze:mr-0 md:mr-4"
        />
        {% else %}
  
        <img src="{{ image }}" alt="{{ imageAlt }}" class="ze:max-h-[5rem] md:max-h-[10rem] ze:mr-0 md:mr-4" />
        {% endif %}
     </div>

      <div class="flex flex-col justify-center">
        <h1 class="font-bold ze:text-4xl md:text-6xl mb-2 text-center">{{ workshopTitle }}</h1>
        <h2 class="ze:text-2xl md:text-4xl text-{{ color }} font-bold text-center">
          Workshop
        </h2>
      </div>
    </div>

    <div class="flex ze:flex-col md:flex-row gap-6 ze:mb-8 md:mb-16">
       {% include 'workshop-curriculum.njk' %}
    </div>

    {% include 'trainer-card.njk' %}


    </div>
  </div>
</div>
