<a href="{{link}}">
  <article class="rounded-lg shadow-xl bg-white hover:shadow-2xl transition ease-in-out hover:-translate-y-3">
    <img src="{{ image }}" alt="{{ imageAlt }}"  class="rounded-t-lg" />
    <div class="p-4 w-full">
      <div class="flex gap-2 mb-2 flex-wrap w-full">
        {%- for keyword in keywords -%}
        <span class="text-blue-900 font-medium">#{{ keyword }}</span>
        {% endfor %}
      </div>
      <h2 class="font-bold text-xl mb-1">{{ title }}</h2>
      <p class="min-h-24">{{ description | truncate }}</p>
      <div class="mt-4 font-medium">Published on {{ date | date }}</div>
    </div>
  </article>
</a>
