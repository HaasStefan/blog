<a href="{{link | url }}">
  <article class="rounded-lg shadow-xl group bg-white hover:shadow-2xl transition ease-in-out hover:-translate-y-3">
    <img src="{{ image }}" alt="{{ imageAlt }}"  class="rounded-t-lg" />
    <div class="p-4 w-full">
        <h2 class="font-bold text-xl mb-1 group-hover:text-blue-500">{{ title }}</h2>
        <summary class="min-h-24">{{ description  | truncate }}</summary>
        <div class="flex gap-2 mb-1 mt-2 flex-wrap w-full">
          {%- for keyword in keywords -%}
          <span class="text-blue-500 font-medium">#{{ keyword }}</span>
          {% endfor %}
        </div>
        <div class="mt-4 font-medium">Published on {{ date | date }}</div>
    </div>
  </article>
</a>
