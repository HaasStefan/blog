<a href="{{link | url }}">
  <article class="rounded-lg shadow-xl group bg-white hover:shadow-2xl transition ease-in-out hover:-translate-y-3">
    <img src="{{ image }}" alt="{{ imageAlt }}"  class="rounded-t-lg" />
    <div class="p-4 w-full">
        <h2 class="font-bold text-xl mb-1 group-hover:text-red-500">{{ title }}</h2>
        <summary class="min-h-24 list-none">{{ description  | truncate }}</summary>

        <div class="mt-4 font-medium">Published on {{ date | postDate }}</div>
    </div>
  </article>
</a>