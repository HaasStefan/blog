<div class="md:ml-10 flex flex-col gap-2 w-full">
    {% for day in curriculum %}

        <div class="bg-{{color}} text-white w-fit font-bold rounded-2xl p-5">
            Day {{loop.index}}
        </div>

        {% for module in day %}
            <div class="pl-8">
                <div class=" bg-atom-dark rounded-lg p-3 text-white w-full">
                    <span class="text-{{color}} font-bold text-lg mr-2">{{loop.index}}.</span> 
                    <span class="font-bold text-lg mr-4">{{module.title}}</span>
                    <span class="text-neutral-200">{{module.description}}</span>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>