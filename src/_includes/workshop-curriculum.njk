<div class="flex flex-col justify-center">
  <div class="w-full md:max-w-sm">
    <span class="text-5xl font-bold text-{{ color }} italic">"</span>
  </div>
  <p class="text-center text-lg px-2 md:max-w-sm">
    {{ description }}
  </p>
  <div class="w-full flex flex-row-reverse md:max-w-sm">
    <span class="text-5xl font-bold text-{{ color }} italic">"</span>
  </div>
</div>

<div class="md:ml-10 flex flex-col gap-2 w-full">
  {% for day in curriculum %}

  <div
    class="bg-{{
      color
    }} text-white shadow-xl w-fit font-bold rounded-xl p-5 px-8 mb-2 mt-6"
  >
    Day {{ loop.index }}
  </div>

  {% for module in day %}
  <div class="ze:pl-4 md:pl-8">
    <div class="bg-white shadow-xl rounded-lg p-3 text-gray-700 w-full">
      <span class="text-{{ color }} font-bold text-lg mr-2"
        >{{ loop.index }}.</span
      >
      <span class="font-bold text-lg mr-4">{{ module.title }}</span>
      <span class="text-gray-500">{{ module.description }}</span>
    </div>
  </div>
  {% endfor %} {% endfor %}
</div>
