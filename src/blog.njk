---
layout: "base.njk"
title: NG Journal - Blog
image: '/assets/ng-journal.png'
pagination:
  data: collections.posts 
  size: 6
  reverse: true
  alias: posts
---


<div class="sm:flex sm:justify-center mt-3">
  <div class="max-w-screen-lg lg:max-w-screen-xl p-4">
    <h2 class="text-center font-bold text-3xl mb-8">
      Recent Articles
    </h2>    <ul class="flex-auto flex flex-row flex-wrap">
      {%- for post in posts  -%}
      {% if posts | length | threeOrMore %}
      <li class="md:basis-1/2 lg:basis-1/3 p-2">
      {% else %}
      <li class="md:basis-1/2 md:p-4 py-2 md:py-0">
      {% endif %}
        {% set title = post.data.title %} {% set description =
        post.data.description %} {% set date
        = post.data.date %} {% set image = post.data.image %} {% set imageAlt =
        post.data.imageAlt %} {% set keywords = post.data.keywords %} {% set
        link = post.url %} {% include 'blog-card.njk' %}
      </li>
      {% endfor %}
    </ul>
    
    {% set pagination = pagination %}
    {% include 'paginator.njk' %}

  </div>
</div>

