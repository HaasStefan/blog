---
layout: "base.njk"
pagination:
  data: collections.posts
  size: 6
  alias: posts
---

<div class="sm:flex sm:justify-center mt-3">
    <div class="max-w-screen-lg lg:max-w-screen-xl p-2">
        <h1 class="font-bold text-3xl mb-4 px-4">Recent Articles</h1>
        <ul class="flex-auto flex flex-row flex-wrap">
            {%- for post in posts -%}
                <li class="md:basis-1/2 p-4 lg:basis-1/3">
                    {% set title = post.data.title %} 
                    {% set description = post.templateContent %} 
                    {% set author = post.data.author %} 
                    {% set date = post.data.date %} 
                    {% set image = post.data.image %} 
                    {% set imageAlt = post.data.imageAlt %} 
                    {% set keywords = post.data.keywords %} 
                    {% include 'blog-card.njk' %}
                </li>
            {% endfor %}
        </ul>
    </div>

    {% if pagination.href.previous %}
        <a href="{{pagination.href.previous}}">Previous Page</a>
    {% endif %}
    {% if pagination.href.next %}
        <a href="{{pagination.href.next}}">Next Page</a>
    {% endif %}
</div>
