<script>
    let contactForm = document.querySelector('contact-form');

    contactForm.addEventListener('submitForm', (event) => {
        const formData = event.detail;

        fetch('./.netlify/functions/contact?' + new URLSearchParams({
            ...formData
        }))
    });
</script>

